<section class="categories-show">
  <% if @category %>
    <header class="page-header">
      <h1>
        <%= @category.name %>
        <small>(<%= pluralize @products.size, 'product' %>)</small>
      </h1>
    </header>

    <div class="products">
      <%= render @products %>
    </div>
  <% else %>
    <p>Category not found.</p>
  <% end %>
</section>

  
