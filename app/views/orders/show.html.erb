<section class="orders-show">

  <header class="page-header">
  </header>

  <div class="order-summary jumbotron">
  <h4 style="padding-bottom: 2em;">Thank you for your order! Your Order number is: <%= @order.id %></h4>
  </div>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <% line_item = @line_items.find { |item| item.product_id == product.id } %>
        <%= render 'line_item', product: product, quantity: line_item.quantity %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          <%= "$#{@order.total_cents / 100.0}" %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-outline-primary' %>

</section>
